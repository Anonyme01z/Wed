{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/music/(.*)", "dest": "/public/music/$1" },
    { "src": "/js/(.*)", "dest": "/src/js/$1" },
    { "src": "/styles.css", "dest": "/src/styles.css" },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
} 