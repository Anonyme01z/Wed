{
  "version": 2,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "src/**/*", "use": "@vercel/static" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/images/(.*)", "headers": { "cache-control": "public, max-age=31536000, immutable" }, "dest": "/public/images/$1" },
    { "src": "/music/(.*)", "headers": { "cache-control": "public, max-age=31536000, immutable" }, "dest": "/public/music/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/server.js" }
  ]
} 